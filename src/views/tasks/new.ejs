<%- include ('../partials/messages.ejs') %>
<form action="/tasks/new" method="POST">
  <label for="title">Title:</label>
  <input type="title" id="title" name="title" placeholder="What's your task?"
    value="<%= typeof title != 'undefined' ? title : '' %>">
  <label for="description">description</label>
  <input type="text" id="description" name="description" placeholder="Describe your task"
    value="<%= typeof description != 'undefined' ? description : ''%>">
  <label for="date_due">When's it due?</label>
  <input type="datetime-local" id="date_due" name="date_due" placeholder="Pick a time"
    value="<%= typeof date_due != 'undefined' ? date_due : ''%>">
  <button type="submit">Submit</button>
</form>
