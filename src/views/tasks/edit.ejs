<%- include ('../partials/messages.ejs') %>
<form action="/tasks/edit/<%= task.id %>" method="POST">
  <label for="title">Title:</label>
  <input type="title" id="title" name="title" placeholder="What's your task?"
    value="<%= task.title %>">
  <label for="description">description</label>
  <input type="text" id="description" name="description" placeholder="Describe your task"
    value="<%= task.description %>">
  <label for="date_due">When's it due?</label>
  <input type="datetime-local" id="date_due" name="date_due" placeholder="Pick a time"
    value="<%= moment(task.date_due).format("YYYY-MM-DDTHH:mm") %>">
  <button type="submit">Submit</button>
</form>
