<%- include ('../partials/messages.ejs') %>
<form id="update-form" data-taskID="<%= task.id %>">
  <label for="title">Title:</label>
  <input type="title" id="title" name="title" placeholder="What's your task?"
    value="<%= task.title %>">
  <label for="description">Description:</label>
  <textarea type="text" id="description" name="description" placeholder="Describe your task"><%= task.description %></textarea>
  <label for="date_due">When's it due?</label>
  <input type="datetime-local" id="date_due" name="date_due" placeholder="Pick a time"
    value="<%= moment(task.date_due).format("YYYY-MM-DDTHH:mm") %>">
  <button id="update-submit" type="submit">Submit</button>
</form>
